@using Abc.Nrtwnd.Entities.Concrete
@model Abc.Nrtwnd.WebUI.Models.Product.ProductListViewModal
@{
    ViewBag.Title = "Banane";
    Layout = "~/Views/_Layout.cshtml";
}
<table class="table table-striped table-sm ">
    <thead>
        <tr>
            <th class="table-success" scope="col">#</th>
            <th class="table-info" scope="col">Ürün Adı</th>
            <th class="table-info" scope="col">Birim Fiyatı</th>
            <th class="table-info" scope="col">Stok Adedi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model.Products)
        {
            <tr>
                <th scope="row">@product.ProductId</th>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
            </tr>
        }
    </tbody>
</table>