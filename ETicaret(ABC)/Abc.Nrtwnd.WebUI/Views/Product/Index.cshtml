@using Abc.Nrtwnd.Entities.Concrete
@using Abc.Nrtwnd.WebUI.TagHelpers
@model Abc.Nrtwnd.WebUI.Models.Product.ProductListViewModal
@{
    ViewBag.Title = "Banane";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-striped table-sm ">
    <thead>
        <tr>
            <th class="table-info" scope="col">#</th>
            <th class="table-info" scope="col">Ürün Adı</th>
            <th class="table-info" scope="col">Birim Fiyatı</th>
            <th class="table-info" scope="col">Stok Adedi</th>
            <th class="table-info"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model.Products)
        {
            <tr>
                <th scope="row">@product.ProductId</th>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a href="@Url.Action("AddToCart","Cart",new{productId=@product.ProductId})" title="AddToCart" class="btn btn-sm btn-success"><i class="fa fa-cart-plus"></i></a></td>

            </tr>
        }
    </tbody>
</table>
@Html.CustomPage(@Model.PageSize, @Model.PageCount, @Model.CurrenCategory, @Model.CurrenPage)