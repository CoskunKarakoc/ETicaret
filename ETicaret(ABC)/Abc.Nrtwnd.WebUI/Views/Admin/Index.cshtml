@using Abc.Nrtwnd.Entities.Concrete
@model Abc.Nrtwnd.WebUI.Models.Product.ProductListViewModal
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<a href="@Url.Action("Add","Admin")" class="btn btn-sm btn-success"><i class="fa fa-plus"></i> Add a new project</a><br /><br />
<table class="table table-striped table-sm ">
    <thead>
    <tr>
        <th class="table-info" scope="col">#</th>
        <th class="table-info" scope="col">Ürün Adı</th>
        <th class="table-info" scope="col">Birim Fiyatı</th>
        <th class="table-info" scope="col">Stok Adedi</th>
        <th class="table-info"></th>
        <th class="table-info"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (Product product in Model.Products)
    {
        <tr>
            <th scope="row">@product.ProductId</th>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td><a href="@Url.Action("Update","Admin",new{productId=@product.ProductId})" title="Edit" class="text-info"><i class="fa fa-edit "></i></a></td>
            <td><a href="@Url.Action("Delete","Admin",new{productId=@product.ProductId})" title="Delete" class="text-danger"><i class="fa fa-trash "></i></a></td>

        </tr>
    }
    </tbody>
</table>